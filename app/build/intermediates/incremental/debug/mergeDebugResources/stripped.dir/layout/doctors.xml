<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border4"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="115dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/specialty_doctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="115dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctorProfile"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/docprofile"
            app:civ_border_color="#4FC3F7"
            app:civ_border_width="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="135dp"
        android:layout_marginRight="10dp"
        android:background="#E3F2FD">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appointment"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="#1565C0"
            android:gravity="center"
            android:text="نوبت بگیرید"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reserved"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:background="#1565C0"
            android:gravity="center"
            android:text="رزرو شده ها"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_baseline_location_on_24"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/see_comments"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="10dp"
            android:background="#1565C0"
            android:gravity="center"
            android:text="نظرات"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>