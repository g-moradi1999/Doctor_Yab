<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="730dp"
    tools:context=".doctorList.DoctorsInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#81D4FA">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/d"
            app:civ_border_color="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="95dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/specialty_doctors"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="125dp"
            android:drawableEnd="@drawable/stethoscope"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="125dp"
            android:drawableEnd="@drawable/ic_baseline_location_on_24"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_baseline_location_on_24"
            android:gravity="start"
            android:text="آدرس مطب"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_baseline_local_phone_24"
            android:gravity="start"
            android:text="تلفن مطب"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
            android:gravity="start"
            android:text="روز"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>



